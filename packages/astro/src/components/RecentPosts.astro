---
import { getCollection, type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import FormattedDate from "./FormattedDate.astro";

interface Props {
  currentSlug?: string;
}

const { currentSlug } = Astro.props;

const posts = await getCollection("blog");

const sortedPosts = posts
  .filter((post) => post.id !== currentSlug)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="recent-posts">
  <h2>RECOMMEND</h2>
  <ul>
    {
      sortedPosts.map((post) => (
        <li>
          <a href={`/testing-sites/astro/blog/${post.id}/`}>
            {post.data.heroImage && (
              <div class="thumbnail">
                <Image
                  src={post.data.heroImage}
                  alt={post.data.title}
                  width={120}
                  height={80}
                />
              </div>
            )}
            <div class="content">
              <span class="title">{post.data.title}</span>
              <span class="date">
                <FormattedDate date={post.data.pubDate} />
              </span>
            </div>
          </a>
        </li>
      ))
    }
  </ul>
</section>

<style>
  .recent-posts {
    margin-top: 3em;
    padding-top: 2em;
    border-top: 1px solid rgb(var(--gray-light));
  }

  .recent-posts h2 {
    margin-bottom: 1em;
    font-size: 1.5em;
  }

  .recent-posts ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .recent-posts li {
    margin-bottom: 1.2em;
  }

  .recent-posts a {
    display: flex;
    align-items: center;
    gap: 1em;
    padding: 0.75em;
    text-decoration: none;
    border-radius: 8px;
    transition: background-color 0.2s;
  }

  .recent-posts a:hover {
    background-color: rgb(var(--gray-light));
  }

  .recent-posts .thumbnail {
    flex-shrink: 0;
    overflow: hidden;
    border-radius: 6px;
  }

  .recent-posts .thumbnail img {
    display: block;
    width: 120px;
    height: 80px;
    object-fit: cover;
  }

  .recent-posts .content {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.3em;
  }

  .recent-posts .title {
    color: rgb(var(--black));
    font-weight: 500;
    line-height: 1.4;
  }

  .recent-posts .date {
    color: rgb(var(--gray));
    font-size: 0.85em;
  }

  @media (max-width: 640px) {
    .recent-posts .thumbnail img {
      width: 80px;
      height: 60px;
    }
  }
</style>
